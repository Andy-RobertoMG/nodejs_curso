extends ../layout/index
block contenido
  div.py-10
    h1.text-4xl.my-10.font-extrabold.text-center Bienes
      span.font-normal Raices
    h2.text-center.text-2xl.font-extrabold=pagina
    if errores
      div(class="max-w-md mx-auto my-10")
        each error in errores 
          p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
    .mt-8.mx-auto.max-w-md
      .bg-white.py-8.px-4.shadow
        form(method="POST" action="/auth/registro" noValidate)
          div 
            label.block.text-sm.upparcase.text-gray-700-mb-2.font-bold Tu nombre 
            input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" type="text" value=nombre name="nombre")
          div 
            label.block.text-sm.upparcase.text-gray-700-mb-2.font-bold Tu email 
            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="text" required pattern="^[a-zA-Z0-9.!#$%&’*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$" name="email" value=email||'')
          div 
            label.block.text-sm.upparcase.text-gray-700-mb-2.font-bold Tu password 
            input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Password" type="password" name="password" value=password)
          div 
            label.block.text-sm.upparcase.text-gray-700-mb-2.font-bold Repetir password
            input#repetir.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Password" type="password" name="repetir" value=password)
          div.flex.items-center.justify-between
            a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? 
            a.text-gray-500.text-xs(href="/auth/recovery") Registrarse
          input(class="w-full mt-2 bg-indigo-700 hover:bg-indigo-800 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta")
